/* ====== GLOBAL / DASAR (Mobile-first) ====== */
* {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background-color: rgb(52, 49, 49);
  margin: 0;
   background-color: #333;
   color: #ffffff;
  font-family:Arial, Helvetica, sans-serif;
  line-height: 1.6;
}

.container h1 {
  text-align: center;
  color: #1a1a7a;
  margin-bottom: 10px;
  margin-top: 5;
}

.container p {
  text-align: center;
  color: #ffffff;
  margin-bottom: 50px;
}
.feedback-form label {
  display: block;
  margin-top: 15px;
  margin-bottom: 5px;
  font-weight: 500;
}

.feedback-form input[type="text"],
.feedback-form input[type="email"],
.feedback-form input[type="number"],
.feedback-form select,
.feedback-form textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
}

.feedback-form textarea {
  resize:horizontal;
  min-height: 80px;
}
header {
  background: #008cff;
  color: white;
  padding: 15px;
  text-align: center;
}

nav {
  display: flex;
  flex-wrap: wrap;
  background: #005fa3;
}

nav a {
  color: white;
  padding: 12px 16px;
  text-decoration: none;
  flex: 1 1 50%; /* Mobile: 2 menu per baris */
  text-align: center;
}

nav a:hover {
  background: #003d6f;
}

/* Container umum */
.container {
  padding: 20px;
}

/* ====== BIODATA ====== */
.biodata {
  display: flex;
  flex-direction: column; /* Mobile: stack */
  gap: 20px;
}

.biodata img {
  max-width: 100%;
  border-radius: 12px;
  object-fit: cover;
}

/* ====== GALERI (FLEXBOX) ====== */
.gallery {
  display: flex;
  flex-wrap: wrap;
  gap: 15px;
}

.gallery .item {
  flex: 1 1 100%; /* Mobile 1 kolom */
}

.gallery img {
  width: 100%;
  border-radius: 10px;
  object-fit: cover;
}

/* ====== TABEL ====== */
.table-wrapper {
  overflow-x: auto;
}

table {
  width: 100%;
  border-collapse: collapse;
}

table, th, td {
  border: 1px solid #333;
}

th {
  background: #eee;
}

/* ====== FORM ====== */
form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

input, textarea, select {
  width: 100%;
  padding: 10px;
  border-radius: 6px;
  border: 1px solid #aaa;
}

/* ========================== */
/*        MEDIA QUERY TABLET  */
/* ========================== */
@media (min-width: 600px) and (max-width: 1023px) {

  nav a {
    flex: 1 1 auto;
  }

  .gallery .item {
    flex: 1 1 45%; /* 2 kolom */
  }

  .biodata {
    flex-direction: row;
  }

  .biodata img {
    width: 40%;
  }

  form {
    flex-direction: row;
    flex-wrap: wrap;
  }

  form .field {
    flex: 1 1 45%;
  }

  textarea {
    flex-basis: 100%;
  }
}

/* ========================== */
/*        DESKTOP             */
/* ========================== */
@media (min-width: 1024px) {

  nav a {
    flex: 1;
  }

  .gallery .item {
    flex: 1 1 22%; /* 4 kolom */
  }

  .biodata img {
    width: 30%;
  }

  form .field {
    flex: 1 1 45%;
  }
}